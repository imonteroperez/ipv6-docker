{
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "cloudbees-gauntlet",
      "source_image": "jenkins-agent-1636451651",
      "zone": "us-east1-b",
      "image_name": "ipv6-agent-{{timestamp}}",
      "network_project_id": "ops-shared-vpc",
      "subnetwork": "gauntlet3",
      "ssh_username": "root",
      "use_internal_ip": true,
      "omit_external_ip": true,
      "service_account_email": "packer-builder@cloudbees-gauntlet.iam.gserviceaccount.com",
      "tags": ["cloudnat-us-east1"],
      "image_storage_locations": ["us-east1"]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "daemon.json",
      "destination": "/tmp/daemon.json"
    },
    {
      "type": "file",
      "source": "Dockerfile.dind",
      "destination": "/tmp/Dockerfile.dind"
    },
    {
      "type": "file",
      "source": "Dockerfile.jnlp",
      "destination": "/tmp/Dockerfile.jnlp"
    },
    {
      "type": "file",
      "source": "docker-ipv6-entrypoint.sh",
      "destination": "/tmp/docker-ipv6-entrypoint.sh"
    },
    {
      "type": "file",
      "source": "docker-compose.yml",
      "destination": "/tmp/docker-compose.yml"
    },
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y ca-certificates curl gnupg lsb-release net-tools linux-modules-extra-$(uname -r)",
        "mkdir -m 0755 -p /etc/apt/keyrings",
        "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg",
        "echo deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable | tee /etc/apt/sources.list.d/docker.list > /dev/null",
        "apt-get update",
        "apt-get install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin",
        "gcloud auth configure-docker us-east1-docker.pkg.dev --quiet",
        "cp -a /tmp/daemon.json .",
        "cp -a /tmp/Dockerfile.jnlp .",
        "cp -a /tmp/Dockerfile.dind .",
        "cp -a /tmp/docker-ipv6-entrypoint.sh .",
        "cp -a /tmp/docker-compose.yml .",
        "docker compose build",
        "docker compose up -d",
        "ifconfig"
      ]
    }
  ]
}
